[user]
    name = Mateusz ≈Åoskot
    email = mateusz@loskot.net
    signingkey = BB2AC1F2

[github]
    user = mloskot

[core]
    editor = vim

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[alias]
    br = branch
    bv = branch -vv
    brv = branch -vv
    bra = branch -a
    ci = commit --verbose
    cia = commit --verbose --amend
    ciae = commit --verbose --amend --no-edit
    co = checkout
    dc = diff --cached
    df = diff
    gf = flow
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    lst = lfs status
    rt = remote
    rtv = remote -v
    st = status
    # generate GitHub repository changelog in Markdown
    # usage: git <alias> first_tag last_tag github_user github_repo
    ghclm = !sh -c 'git log $1...$2  --pretty=format:\"* [view](http://github.com/$3/$4/commit/%H) - %s\"' -
    # show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    prune-branches-origin = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
    prune-branches-mloskot = !git remote prune mloskot && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[commit]
    template = ~/.gitmessage

[credential]
    helper = manager

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge --skip -- %f
    process = git-lfs filter-process --skip
    required = true
