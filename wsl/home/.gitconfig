[github]
	user = mloskot
[core]
	editor = code --wait -n
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	header = normal
	added = red
	updated = green
	changed = red
	untracked = red
	nobranch = red

[include]
	path = ~/alias_basic.gitconfig
	path = ~/alias_ignore.gitconfig
	path = ~/alias_log.gitconfig
	path = ~/alias_tree.gitconfig
	path = ~/alias_misc.gitconfig

[commit]
	template = ~/.gitmessage
[credential]
	helper = manager
[http]
	postBuffer = 1048576000
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
